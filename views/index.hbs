<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>家庭記帳本</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <style>
      .list-group-item:nth-child(odd) { background-color: #f8f9fa; }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="card mt-5">
        <div class="card-body">
          <div class="form-group">
            <select class="form-control" id="category">
              <option>類別</option>
              <option>家居物業</option>
              <option>交通出行</option>
              <option>休閒娛樂</option>
              <option>餐飲食品</option>
              <option>其他</option>
            </select>
          </div>
          <h2 class="text-center mb-4">總金額：{{totalAmount}}</h2>
          <ul class="list-group">
            {{!-- {{#each expenses}} --}}
            <li
              class="list-group-item d-flex justify-content-between align-items-center"
            >
              <div>
                <img src="{{icon}}" alt="{{category}}" width="30" height="30" />
                {{!-- <span>{{category}}</span>
                  <small>{{createdAt}}</small> --}}
                <span>家庭物業</span>
                <div>
                  <small>2020</small>
                </div>
              </div>
              <div>
                {{!-- <span class="badge badge-primary badge-pill">{{amount}}</span> --}}
                <span class="badge badge-primary badge-pill mr-3">100</span>
                <a class="btn btn-sm btn-warning" href="/records/edit">修改</a>
                <button class="btn btn-sm btn-danger">刪除</button>
              </div>
            </li>
            {{!-- {{/each}} --}}
          </ul>
          <div class="text-center mt-3">
            <a class="btn btn-primary" href="/records/new">新增支出</a>
          </div>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    ></script>
  </body>
</html>